@using Microsoft.AspNet.Identity;
@model IEnumerable<WorkDB.Models.Player>
@{
    ViewBag.Title = "Contact";
}
@using Microsoft.AspNet.Identity;
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>
<div class="row mb-2">
    <div class="col-md-6">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <img class="card-img-top" data-src="holder.js/100px250?theme=thumb&bg=55595c&fg=eceeef&text=Name Of Rournamnet" alt="Card image cap">
            <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-primary">World</strong>
                <h3 class="mb-0">
                    <a class="text-dark">Тута название</a>
                </h3>
                <div class="mb-1 text-muted">Тута дата</div>
                <p class="card-text mb-auto">Тута описание</p>
                <div> тут таблица</div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <canvas class="my-4 chartjs-render-monitor" id="myChart" width="546" height="230" style="display: block; width: 546px; height: 230px;"></canvas>
    </div>
</div>



<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
<script>
    var ctx = document.getElementById("myChart");
    var array3 = "@string.Join(",",ViewBag.Array1)";
    var array2 = [@string.Join(",",ViewBag.Array2)];
    var names = array3.split(",");
    @*let names = [];
    for (var i = 0; i < ViewBag.Counter + 1; i++) {
        names[i] = '"' + @string.Join(",",ViewBag.Array1[i]) + '"';
    }*@
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: names,
            datasets: [{
                data: array2,
                lineTension: 0,
                backgroundColor: '#007bff',
                borderColor: '#007bff',
                borderWidth: 4,
                pointBackgroundColor: '#007bff'
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: false
                    }
                }]
            },
            legend: {
                display: false,
            }
        }
    });
</script>