@model WorkDB.Models.Enrollment
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Create";
}

<h2>Заявка в турнир</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Пользователь: @User.Identity.GetUserName()</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
           @* @Html.LabelFor(model => model.TournamentID, "TournamentID", htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.DropDownList("TournamentID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TournamentID, "", new { @class = "text-danger" })
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Заявиться" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <input class="btn btn-secondary" type="button" value="Вернуться назад" onclick="location.href='@Url.Action("Index", "Tournaments")'"> 
    
</div>
