@model WorkDB.Models.Player

@{
    ViewBag.Title = "Details";
}

<h2>Детали</h2>

<div>
    <hr />
    <div class="card flex-md-row mb-4 box-shadow h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
            <strong class="d-inline-block mb-2 text-info">Карточка пользователя</strong>
            <h3 class="mb-0">
                <a class="text-dark">@Html.DisplayFor(model => model.Team)</a>
            </h3>
            <p class="card-text mb-auto">@Html.DisplayFor(model => model.NickName)</p>
            <p class="card-text mb-auto">@Html.DisplayFor(model => model.Firstname)</p>
            <p class="card-text mb-auto">@Html.DisplayFor(model => model.LastName)</p>
            <p class="card-text mb-auto">Количество очков @Html.DisplayFor(model => model.Score)</p>
        </div>
        @Html.Raw("<img style='width:150px; height:150px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.Avatar.Image) + "\" />")
    </div>
    <div>
        <table class="table">
            <tr>
                <th>Турнир</th>
                <th>Заработанные очки</th>
            </tr>
            @foreach (var item in Model.Enrollments)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tournament.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grade)
                    </td>
                </tr>
            }
        </table>
    </div>
 
</div>
<p>
    <input class="btn btn-secondary" type="button" value="Изменить" onclick="location.href='@Url.Action("Edit", new { id=Model.ID })'">
    <input class="btn btn-warning" type="button" value="Вернуться обратно" onclick="location.href='@Url.Action("Index")'">
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")*@
</p>
