@model IEnumerable<WorkDB.Models.Avatar>
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Index";
}

<h2>Мои изображения</h2>

<p>
    @Html.ActionLink("Добавить изображение", "Create")
</p>
<table>
    <tr>
        <th>Название</th>
        <th>Картинка</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.Raw("<img style='width:80px; height:80px;' class='rounded' src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(item.Image) + "\" />")
            </td>
        </tr>
    }

</table>
<div>
    <input class="btn btn-warning" type="button" value="Вернуться обратно" onclick="location.href='@Url.Action("Index","Player")'">
</div>
